.intro
	.intro__controls
		a.intro__backward(
			href="#"
			arial-label="Вернуться назад"
		)
			+svg("arrow-back")(class="intro__backward-icon" width="25" height="18")
		img.intro__logo.lazyload(
			src=placeholder
			data-src="images/details/yota.png"
			data-srcset="images/details/yota.png 320w, images/details/yota-big.png 1440w"
			width="33"
			height="71"
		)
		button.intro__share(
			type="button"
			aria-label="Поделиться"
		)
			+svg("share")(class="intro__share-icon" width="24" height="28")
