	@example
	```
		+videoSlider([
			{
				href: '',
				headline: {
					tag: '',
					text: ''
				},
				description: ''
			}
		])
	```

mixin videoSlider(options)
	.video-slider&attributes(attributes)
		.video-slider__list.owl-carousel
			each slide in options

				figure.video-slider__item
					iframe.video-slider__video.lazyload(
						data-src=slide.href
						width="100%"
						height="auto"
					)
					button.video-slider__play-button(
						type="button"
						aria-label="Воспроизвести"
					)
						+svg("play")(
							class="video-slider__play-icon"
							width="46"
							height="46"
							aria-hidden="true"
						)
					figcaption.video-slider__caption
						#{slide.headline.tag}.video-slider__headline
							| !{slide.headline.text}
						p.video-slider__description
							| !{slide.description}
