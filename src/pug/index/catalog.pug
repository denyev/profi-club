.catalog
	.catalog__settings
		form.catalog__form(
			action="?"
			method="post"
		)
			button.catalog__view-btn.catalog__view-btn--active(
				aria-label="Показать в виде списка"
			)
				+svg("list")(class="catalog__view-icon" width="30" height="16")
			button.catalog__view-btn(
				aria-label="Показать в виде карточек"
			)
				+svg("cards")(class="catalog__view-icon" width="23" height="23")
			label.catalog__sort
				select.catalog__sort-wrap(
					name="sort[]"
				)
					option.catalog__sort(
						selected=true
						value="Популяность"
					)
						| Популяность
		p.catalog__total
			| Показано 1-7 из 298 предложений
	ul.catalog__list
		- var catalog_items_count = 7
		- while(catalog_items_count--) {
		li.catalog__item
			+job({
				title: 'Менеджер по контекстной рекламе',
				description: '<p>Нам нужен опытный менеджер, который не боится брать на себя ответственность. ' +
					'Человек, готовый учиться, развиваться и расти профессионально. ' +
					'Если это про тебя, отправляй резюме нам!</p>',
				link: {
					href: 'https://blondinka.ru/',
					name: 'Blondinka.ru'
				},
				city: 'Москва',
				schedule: 'Полная занятость',
				tags: [
					'Маркетинг',
					'Реклама'
				],
				date: {
					attribute: '2019-01-31',
					value: '31 января, 2019'
				}
			})
		- }
	+pagination({1: 'первую', 2: 'вторую', 3: 'третью', 4: 'четвёртую'}, 2)
